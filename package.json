{
  "name": "optidevdoc-mcp",
  "version": "1.0.0",
  "description": "MCP tool for Optimizely documentation integration with AI coding assistants",
  "main": "main.js",

  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/http-server.ts",
    "build": "node build-script.js",
    "start": "node main.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "security-check": "npm audit && npm audit --audit-level moderate",
    "performance-test": "tsx src/tests/performance.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist coverage .nyc_output",
    "precommit": "npm run lint && npm run type-check && npm run test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "optimizely",
    "documentation",
    "ai-assistant",
    "cursor",
    "vscode"
  ],
  "author": "OptiDevDoc Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^2.4.2",

    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/sqlite3": "^3.1.11",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.1.3",
    "@vitest/coverage-v8": "^1.1.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "prettier": "^3.1.1",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/optidevdoc-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/optidevdoc-mcp/issues"
  },
  "homepage": "https://github.com/your-org/optidevdoc-mcp#readme"
} 