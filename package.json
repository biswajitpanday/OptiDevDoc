{
  "name": "optidevdoc",
  "version": "3.1.4",
  "description": "Intelligent Optimizely development assistant with product-aware rules, pattern analysis, bug resolution, and comprehensive documentation search",
  "main": "index.js",
  "bin": {
    "optidevdoc": "bin/optidevdoc"
  },
  "scripts": {
    "dev": "tsx src/deploy-server-simple.ts",
    "dev:enhanced": "tsx src/deploy-server-enhanced.ts",
    "dev:http": "tsx src/deploy-server-simple.ts",
    "prebuild": "node -e \"const fs=require('fs'); ['data/optidevdoc.db', 'logs', 'rules', 'dist'].forEach(dir => { try { fs.mkdirSync(dir, {recursive:true}); } catch(e) {} });\"",
    "build": "echo '⚙️ Building OptiDevDoc...' && babel src --out-dir dist --extensions '.ts,.tsx' --copy-files && echo '✅ Build completed'",
    "build:full": "babel src --out-dir dist --extensions '.ts,.tsx' --copy-files",
    "start": "node index.js",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "echo 'Package ready for NPM distribution'",
    "prepublishOnly": "npm run build",
    "deploy": "node scripts/deploy.js",
    "deploy:minor": "node scripts/deploy.js minor",
    "deploy:major": "node scripts/deploy.js major"
  },
  "keywords": [
    "optimizely",
    "configured-commerce",
    "cms",
    "experimentation",
    "development-assistant",
    "mcp",
    "ai-assistant",
    "product-aware",
    "pattern-analysis",
    "bug-resolution",
    "documentation-search",
    "rules-engine"
  ],
  "author": "OptiDevDoc Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biswajitpanday/OptiDevDoc.git"
  },
  "bugs": {
    "url": "https://github.com/biswajitpanday/OptiDevDoc/issues"
  },
  "homepage": "https://github.com/biswajitpanday/OptiDevDoc#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bin/",
    "dist/",
    "rules/",
    "Resources/",
    "index.js",
    "main.js",
    "optidevdoc-remote.js",
    "cursor-mcp.json",
    "render.yaml",
    "tsconfig.json",
    "tsconfig.build.json",
    "package.json",
    "README.md",
    "scripts/"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.1",
    "better-sqlite3": "^11.5.0",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.19.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "node-fetch": "^3.3.0",
    "p-queue": "^8.0.1",
    "p-retry": "^6.2.0",
    "rate-limiter-flexible": "^5.0.3",
    "semver": "^7.5.4",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "winston": "^3.14.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yaml": "^2.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.0",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.15.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/compression": "^1.8.1",
    "@vitest/ui": "^2.1.4",
    "copyfiles": "^2.4.1",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "vitest": "^2.1.4"
  },
  "bundledDependencies": [],
  "bundleDependencies": []
}
