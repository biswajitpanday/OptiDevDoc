{
  "name": "optivise",
  "version": "5.0.0",
  "description": "Optivise - The Ultimate Optimizely Development Assistant with AI-powered features, zero-config setup, and comprehensive development support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "optivise": "bin/optivise"
  },
  "scripts": {
    "dev": "npm run build && node dist/index.js",
    "dev:ai": "npm run build && npx cross-env OPTIVISE_AI_ENABLED=true node dist/index.js",
    "dev:basic": "npm run build && npx cross-env OPTIVISE_AI_ENABLED=false node dist/index.js",
    "dev:watch": "tsx src/index.ts",
    "dev:server": "npm run build && npx cross-env OPTIVISE_MODE=server PORT=3000 node dist/index.js",
    "build": "npm run clean && tsc && npm run copy-assets",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "copy-assets": "copyfiles -u 1 'src/**/*.json' 'src/**/*.md' dist/",
    "start": "npm run build && node dist/index.js",
    "mcp": "npm run build && node dist/index.js",
    "mcp:test": "npm run build && timeout 5s node dist/index.js || echo 'MCP server test completed'",
    "server": "npm run dev:server",
    "server:test": "npm run dev:server &sleep 3 && curl http://localhost:3000/health && pkill -f 'node dist/index.js'",
    "sync:docs": "npm run build && node dist/index.js --sync-docs",
    "setup:vector": "npm run build && node dist/index.js --setup-vector",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ai": "npx cross-env OPTIVISE_AI_ENABLED=true vitest --run ai",
    "test:e2e": "vitest --run e2e",
    "test:keys": "npm run build && node dist/index.js --test-keys",
    "test:mcp": "npm run build && node -e \"console.log('Testing MCP server...'); require('./dist/index.js')\" || echo 'MCP test completed'",
    "clear:cache": "npm run build && node dist/index.js --clear-cache",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run typecheck && npm run lint",
    "deploy": "npm publish --access public",
    "deploy:beta": "npm publish --tag beta --access public",
    "deploy:render": "echo 'Render deployment will be updated for Optivise v5.0.0'"
  },
  "keywords": [
    "optimizely",
    "mcp",
    "ai-assistant",
    "context-analysis",
    "llm-enhancement",
    "development-assistant",
    "cursor-ide",
    "vs-code",
    "configured-commerce",
    "cms",
    "experimentation",
    "dxp"
  ],
  "author": "OptiDevDoc Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biswajitpanday/OptiDevDoc.git"
  },
  "bugs": {
    "url": "https://github.com/biswajitpanday/OptiDevDoc/issues"
  },
  "homepage": "https://github.com/biswajitpanday/OptiDevDoc#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bin/",
    "dist/",
    "rules/",
    "cursor-mcp.json",
    "render.yaml",
    "tsconfig.json",
    "package.json",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/node": "^22.10.1",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "chromadb": "^1.8.0",
    "fast-xml-parser": "^4.3.0",
    "langchain": "^0.2.0",
    "node-cron": "^3.0.0",
    "openai": "^4.20.0",
    "sqlite3": "^5.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/ui": "^3.2.4",
    "copyfiles": "^2.4.1",
    "cross-env": "^10.0.0",
    "eslint": "^9.15.0",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "vitest": "^3.2.4"
  },
  "bundledDependencies": [],
  "bundleDependencies": []
}
